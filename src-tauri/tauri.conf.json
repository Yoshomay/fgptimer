{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FGP Timer",
  "version": "1.0.1",
  "identifier": "com.yoshomay.fgptimer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FGP Timer 1.0.1",
        "width": 300,
        "height": 500,
        "minWidth": 100,
        "minHeight": 100
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "rpm", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
